<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h3 id="my-application-index-title">My Job Applications</h3>
      <div>
        <% @job_applications.each do |application| %>
          <div>
            Application Status: <%= application.status %> |
            <% if application.job.company.company_website_url.present?%>
              Job: <%= application.job.job_title %> at <a href="<%=application.job.company.company_website_url %> " target="_blank"> <%= application.job.company.company_name %> </a>

<div>
  <h3>Jobs you've applied to:</h3>
  <% @job_applications.each do |application| %>
    <div>
      Application Status: <%= application.status %> |
      <% if application.screenshot.attached? %>
       <%= cl_image_tag application.screenshot.key %>
       <% else %>
      <%= image_tag "cheddar_logo.png"%>
      <% end %>
      <% if application.job.company.company_website_url.present?%>
        Job: <%= application.job.job_title %> at <a href="<%=application.job.company.company_website_url %> " target="_blank"> <%= application.job.company.company_name %> </a>

      <% else %>
        Job: <%= application.job.job_title %> at <%= application.job.company.company_name %>
      <% end %>
    </div>
  </div>
</div>
