<div id="profile-info">
  <% if current_user.photo.key %>
    <%= image_tag current_user.photo, class: "img-thumbnail rounded-circle", width: '200', height: '200' %>
  <% else %>
    <%= image_tag "avatar_default.png", class: "img-thumbnail rounded-circle", width: '200', height: '200' %>
  <% end %>
  <div class="name-status">
    <h2><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></h2>
    <h2 style="color: rgba(0, 0, 0, 0.5);">He/Him</h2>
  </div>
  <h1 style="color: #0a66c2"><i class="fa-brands fa-linkedin"></i></h1>
  <h1><i class="fa-brands fa-github"></i></h1>
</div>

<div id="profile-scroll-boxes">
  <div class="scroll-box">
    <h3 class="text-center">
      Your Details
      <%= link_to edit_user_registration_path(current_user), data: {turbo_method: :post} do %>
          <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    </h3>
    <div id="contact-info">
      <h5>Contact Information</h5>
      <h6>Address</h6>
      <p><%= current_user.address_first %>, <%= current_user.address_second if current_user.address_second %>, <%= current_user.city %></p>
      <p><%= current_user.post_code %></p>
      <h6>Email</h6>
      <p><%= current_user.email %></p>
      <h6>Phone</h6>
      <p><%= current_user.phone_number %></p>
    </div>
    <div id="education">
      <h5>
        Education
        <%= link_to new_education_path(current_user), data: {turbo_method: :post} do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      </h5>
      <% current_user.educations.each do |education| %>
        <div class="education-card">
          <h6><%= education.university %></h6>
          <p style="color:black"><%= education.degree %> in <%= education.field_study %></p>
          <p>Achieved in: <%= education.graduation_year %></p>
        </div>
      <% end %>
    </div>
    <div id="documents">
      <h5>Documents</h5>
      <%= link_to "Resume", current_user.resume.url, class: "btn-apply", target: "_blank" %>
    </div>
  </div>
  <div class="scroll-box">
    <h3 class="text-center">Your Applications</h3>
    <% current_user.job_applications.each do |application| %>
      <div class="application-card-small">
        <div class="profile-application-details">
          <h5><%= application.job.job_title %></h5>
          <h6><%= application.job.company.company_name %></h6>
        </div>
        <div class="progress-container">
          <div class="progress-bar" data-progress="75"></div>
          <div class="progress-label">75%</div>
        </div>
      </div>
    <% end %>
  </div>
</div>
