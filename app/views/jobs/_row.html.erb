<div class="row mb-3" data-select-by-company-target="companyRow" data-select-by-job-type-target="jobRow" data-styling-selected-job-target="jobCard">
  <div class="col-12">
    <div class="card job-card">
      <div class="card-body">
        <div class="row text-center">
          <div class="col card-logo companyName"><%= image_tag("https://logo.clearbit.com/#{job.company.company_website_url}?size=60", onerror: "this.src='https://i.pinimg.com/736x/ec/d9/c2/ecd9c2e8ed0dbbc96ac472a965e4afda.jpg'") %><p class="d-none"><%= job.company.company_name%></p></div>
          <div class="col role" data-role="<%= job.job_title %>"><%= link_to job.job_title.truncate(25), job_path(job) %></div>
          <div class="col-2 d-none job-description-small" data-job-index-toggle-target="newColumn2"><%= job.job_description.truncate(90) %></div>
          <div class="col salaryBudget">Â£<%= number_with_delimiter(job.salary, :delimiter => ',') %></div>
          <div class="col">
            <% if (Time.now.next_day(7)) >= job.application_deadline %>
              <button class="btn btn-closing-soon">CLOSING SOON</button>
            <% elsif Time.now < job.application_deadline %>
              <button class="btn btn-status">OPEN</button>
            <% else %>
              <button class="btn btn-closed">CLOSED</button>
            <% end %>
          </div>
          <div class="col"><%= job.application_deadline.strftime("%d/%m") %></div>
          <div class="col ">
            <% if job.application_criteria["resume"].any? %>
              YES
            <% else %>
              NO
            <% end %>
          </div>
          <div class="col">
            <%= link_to job.job_posting_url, target: "_blank" do %>
              <i class="fa-solid fa-external-link-alt"></i>
            <% end %>
          </div>
          <div class="col ">
            <% if SavedJob.where(job_id: job.id).present? %>
              <i class="fa-solid fa-heart saved-job-heart-icon"></i>
            <% else %>
              <%= link_to job_saved_jobs_path(job), data: {turbo_method: :post} do %>
                <i class="fa-regular fa-heart not-saved-job-heart-icon"></i>
              <% end %>
            <% end %>
          </div>
          <div class="col selectBox">
            <label class="custom-checkbox" data-job-index-toggle-target="jobCheckbox" data-action="click->job-index-toggle#updateApplyButton">
              <%= check_box_tag "job_ids[]", job.id, false, id: "job_#{job.id}", class: 'select-job-box', data: { styling_selected_job_target: "checkBox", action: 'change->styling-selected-job#styleCard' } %>
              <span class="checkmark"></span>
            </label>
          </div>
          <%# <div class="col text-center submit"><input type="checkbox"></div> %>
        </div>
      </div>
    </div>
  </div>
</div>
