
<div class=" vh-100 d-flex align-items-center justify-content-center">
  <div class="col-md-3">
      <%= image_tag 'testimonial.png', style: 'height: 550px; width: 500px;' %>
    </div>
  <div class="col-md-8 d-flex justify-content-end align-items-center ">
      <div class=" w-50 border shadow rounded-5 " ><!-- Adjust the column size as needed -->
    <div class="col md-4 p-2 m-2 ">
      <div class="login-box text-center">
        <h2 class="py-2">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs w-100">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean, input_html: { class: 'remember-me' } if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
