<div class="container vh-180 d-flex align-items-center justify-content-center">
  <div class="d-flex justify-content-center align-items-center w-50 border shadow rounded p-2 m-4">
    <div class="col-md-10 p-0 m-0"> <!-- Adjust the column size as needed -->
      <div class="login-box text-center">
        <h2>Add/ Edit your Information </h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :last_name, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :email, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :phone_number, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :address_first, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :address_second, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :post_code, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :city, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :linkedin_profile, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :github_profile_url, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :website_url, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :resume, as: :file, label: 'PDF file:', input_html: {accept: ('application/pdf') }, required: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :cover_letter_template_url, required: false, autofocus: true, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :photo, as: :file, label_html: { style: 'font-style: italic;' } %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "new-password" }, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" }, label_html: { style: 'font-style: italic;' } %>
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { autocomplete: "current-password" }, label_html: { style: 'font-style: italic;' } %>
          </div>
          <%= f.submit "Update", class: 'btn-add-info' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
